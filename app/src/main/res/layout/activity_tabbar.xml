<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.developerhaoz.sleephelper.recyclerview.TabbarActivity">

    <com.aries.ui.view.title.TitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:title_statusBarLightMode="true"
        android:background="@color/primary_light"
        app:title_actionTextColor="@color/black"
        app:title_dividerColor="@color/lemonOrange"
        app:title_leftTextColor="@color/gray_light"
        app:title_leftTextDrawable="@drawable/ic_arrow_left"
        app:title_rightTextColor="@color/black"
        app:title_titleMainTextColor="@color/black"
        app:title_titleSubTextColor="@color/black"/>


</LinearLayout>
